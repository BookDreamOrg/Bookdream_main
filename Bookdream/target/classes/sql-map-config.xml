<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 
 

<configuration>

	<!-- Alias 설정-->
	<typeAliases>
		<typeAlias alias="book" type="com.spring.bookdream.vo.BookVO"></typeAlias>
		<typeAlias alias="review" type="com.spring.bookdream.vo.ReviewVO"></typeAlias>
	</typeAliases> 
	

	<!-- Sql Mapper 설정  -->
	<mappers>

		<mapper resource="mappings/book-mapping.xml" />
		<mapper resource="mappings/review-mapping.xml" />
	
	</mappers>
	
	
	
</configuration>

